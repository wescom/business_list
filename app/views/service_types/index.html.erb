<div class="page-content">
	<div class="business_type_heading">
		<div class="d-flex justify-content-between align-items-center">
			<h2>Service Types</h2>
			<div class="float-right"><%= link_to "New Service Type", new_service_type_path %></div>
		</div>
	</div>

	<div class="service_type_block">
		<div class="">
			<% if @service_types %>
				<% unless @service_types.nil? %>
					<table id="services_types" class="table table-hover table-condensed table-striped table-sm">
						<thead class="">
							<tr>
								<th class="">Name</th>
								<th class="text-center">Action</th>
							</tr>
						</thead>
						<tbody>
							<%= render :partial => 'table_row', :collection => @service_types %>
						</tbody>
					</table>
				<% end %>
			<% end %>
		</div>
	</div>
</div>