<div class="default_settings_heading">
	<h1>Default Settings</h1>
	<%= link_to 'Edit', edit_default_setting_path(1), :class=>"float-right btn btn-primary" %>
	<h6 class='offset-1'>These settings control site-wide defaults...</h6>
</div>

<div class="default_settings_block" >
	<h5>Home Page:</h5>
	<hr/>
	<div class="form-group row">
		<label for="home_welcome_text" class="offset-1 col-2">Welcome Text:</label>
		<div class="col-5 default_text_field">
			<%= @default_setting.home_welcome_text %>
		</div>

		<label for="homepage_banner_image" class="col-2">Banner Image:</label>
		<div class="col-2">
			<%= image_tag @default_setting.homepage_banner_image.url(:small) %>
		</div>
	</div>

	<div class="form-group row">
		<label for="general_instructions" class="offset-1 col-2">General Instructions:</label>
		<div class="col-5 default_text_field">
			<%= @default_setting.general_instructions %>
		</div>

		<label for="homepage_banner_image" class="col-2">General Instruction Image:</label>
		<div class="col-2">
			<%= image_tag @default_setting.homepage_general_instruction_image.url(:small) %>
		</div>
	</div>

	<div class="form-group row">
		<label for="registration_text" class="offset-1 col-2">Registration Text:</label>
		<div class="col-5 default_text_field">
			<%= @default_setting.registration_text %>
		</div>

		<label for="homepage_banner_image" class="col-2">Registration Image:</label>
		<div class="col-2">
			<%= image_tag @default_setting.homepage_registration_image.url(:small) %>
		</div>
	</div>
	<br/>

	<h5>Welcome Page After Registration:</h5>
	<hr/>
	<div class="form-group row">
		<label for="registered_welcome_text" class="offset-1 col-2">Welcome Text:</label>
		<div class="col-5 default_text_field">
			<%= @default_setting.registered_welcome_text %>
		</div>

		<label for="registered_welcome_image" class="col-2">Welcome Image:</label>
		<div class="col-2">
			<%= image_tag @default_setting.registered_welcome_image.url(:small) %>
		</div>
	</div>
	<br/>

	<h5>Emails:</h5>
	<hr/>
	<div class="form-group row">
		<label for="contact_email" class="offset-1 col-4">General Contact Email Address:</label>
		<div class="col-5">
			<%= @default_setting.contact_email %>
		</div>
	</div>
	<table class="table table-sm w-auto offset-1">
		<thead class="thead-light">
			<tr>
				<th class="">Templates</th>
				<th class="">Description</th>
				<th class="text-center align-middle ">Action</th>
			</tr>
		</thead>
		<tbody>
			<% unless @default_settings_emails.nil? %>
				<% @default_settings_emails.each do |email| %>
					<tr>
						<td><%= email.name %></td>
						<td><%= email.description %></td>
						<td class="text-center">
							<div class="btn">
								<%= link_to icon('edit fa-lg'),
									edit_default_settings_email_path(email),
									title: 'Edit', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
								<%= link_to icon('remove fa-lg'), 
									default_settings_emails_path(email), :class => "",
									:method=> :delete, :action => 'destroy',
									data: {
										title: 'Delete '+email.name+'?', 
										confirm:'Remove this email remplate from the system?'},
									title: 'Delete', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
							</div>
						</td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
		<tfoot><tr><td><%= link_to "New Template", new_default_settings_email_path %></td></tr>
		</tfoot>
	</table>
	<br/>
	<br/>
	
</div>