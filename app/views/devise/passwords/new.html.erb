<div id="login-page">
	<div id="page-content" class="clearfix">
		<div class="inner-box clearfix">
			<h2>Forgot your password?</h2>
		  <div id="login-content" class="form-horizontal">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= render "devise/shared/error_messages", resource: resource %>

					<div class="form-group row">
						<label for="email" class="offset-1 col-3 col-form-label">Email:</label>
						<div class="col">
							<%= f.text_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
						</div>
					</div>

					<div class="form-group row d-flex justify-content-center">
						<label for="submit" class="offset-1 col-3 col-form-label"></label>
						<div class="col">
							<%= f.submit "Send me reset password instructions", :class => 'btn btn-primary' %>
						</div>
					</div>
				<% end %>
			</div>
		</div>

		<%= render "devise/shared/links" %>

	</div>
</div>
