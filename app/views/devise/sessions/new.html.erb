<div id="login-page">
	<div id="page-content" class="clearfix">
		<div class="inner-box clearfix">
			<h1>Login</h1>
		  <div id="login-content" class="form-horizontal">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					<div class="form-group row">
						<label for="email" class="offset-1 col-1 col-form-label">Email:</label>
						<div class="col">
							<%= f.text_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
						</div>
					</div>
					<div class="form-group row">
						<label for="password" class="offset-1 col-1 col-form-label">Password:</label>
						<div class="col">
							<%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
						</div>
					</div>

				  <% if devise_mapping.rememberable? %>
						<div class="form-group row">
							<label for="" class="offset-1 col-2 col-form-label"></label>
							<div class="col-3">
								<%= f.check_box :remember_me, class: "" %> Remember Me
							</div>
						</div>
				  <% end %>

					<br/>
					<div class="form-group row d-flex justify-content-center">
						<%= f.submit "Login", :class => 'btn btn-primary'%>
						<%= f.submit "Cancel", :name => 'cancel_button', :class => 'btn btn-primary'%>
					</div>
				<% end %>
			</div>
			<div class="9">

			<div>
		</div>
	</div>
</div>
<%= render "devise/shared/links" %>
