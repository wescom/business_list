<div class="form-row">
	<div class="form-group col-md-6">
		<label for="name" class="col-form-label">Business Name:</label>
		<div class="col-12">
			<%= form.text_field :name, class: "form-control", :placeholder => "Name", :required => "true" %>
		</div>
	</div>
	<div class="form-group col-md-6">
		<label for="business_type" class="col-form-label">Type:</label>
		<div class="col-12">
			<%= form.select :business_type_id, 
				options_from_collection_for_select(@business_types, 'id', 'name', 
				:selected => params[:business_type_id]), 
				{:class => "form-control", :prompt => "- Select Type -", :required => true} %>
  		</div>
	</div>
</div>
<hr/>

<div class="form-row">
	<div class="form-group col-md-6">
		<label for="address1" class="col-form-label">Address1:</label>
		<div class="col-12">
			<%= form.text_field :address1, class: "form-control", :required => "true" %>
		</div>
	</div>
</div>
<div class="form-row">
	<div class="form-group col-md-6">
		<label for="address2" class="col-form-label">Address2:</label>
		<div class="col-12">
			<%= form.text_field :address2, class: "form-control" %>
		</div>
	</div>
</div>
<div class="form-row">
	<div class="form-group col-md-4">
		<label for="city" class="col-form-label">City:</label>
		<div class="col-12">
			<%= form.text_field :city, class: "form-control", :required => "true" %>
		</div>
	</div>
	<div class="form-group col-md-2">
		<label for="state" class="col-form-label">State:</label>
		<div class="col-12">
			<%= form.text_field :state, class: "form-control", :required => "true" %>
		</div>
	</div>
	<div class="form-group col-md-2">
		<label for="zipcode" class="col-form-label">Zipcode:</label>
		<div class="col-12">
			<%= form.text_field :zipcode, class: "form-control", :required => "true" %>
		</div>
	</div>
</div>
<hr/>

<div class="form-row">
	<div class="form-group col-md-6">
		<label for="hours" class="col-form-label">Business Hours:</label>
		<div class="col-6">
			<%= form.text_field :hours, class: "form-control", :placeholder => "Hours", :required => "true" %>
		</div>
	</div>
	<div class="form-group col-md-6">
		<label for="website" class="col-form-label">Website:</label>
		<div class="col-12">
			<%= form.text_field :website, class: "form-control" %>
		</div>
	</div>
</div>
<div class="form-row">
	<div class="form-group col-md-6">
		<label for="phonenum" class="col-form-label">Phone Number:</label>
		<div class="col-6">
			<%= form.text_field :phonenum, class: "form-control", :required => "true" %>
		</div>
	</div>
	<div class="form-group col-md-6">
		<label for="email" class="col-form-label">Email:</label>
		<div class="col-12">
			<%= form.text_field :email, class: "form-control", :required => "true" %>
		</div>
	</div>
</div>
<hr/>
<div class="form-group row">
	<label for="notes" class="col-form-label">Notes:</label>
	<div class="col-12">
		<%= form.text_area :notes, class: "form-control", :required => "true" %>
	</div>
</div>
