<div class="business_heading">
	<h1>
		<%= image_tag @business.logo.url(:medium) %>
		<%= @business.name %>
		<div class="float-right"><%= link_to "All Businesses", businesses_path(@business), :class => 'btn btn-primary' %></div>
		<div class="float-right"><%= link_to "Edit", edit_business_path(@business), :class => 'btn btn-primary' %></div>
	</h1>
</div>

<div class="business_block" >
	<h5>Busines Info:</h5>
	<div class="form-group row">
		<label for="name" class="col-2">Name:</label>
		<div class="col-6">
			<%= @business.name %>
		</div>
	</div>

	<div class="form-group row">
		<label for="business_type" class="col-2">Type:</label>
		<div class="col-3">
			<%= @business.business_type.name unless @business.business_type.nil? %>
		</div>
		<label for="business_subtype" class="col-3"><%= @business.business_type.name %> <%= @business.business_type.title_for_subtypes %>:</label>
		<div class="col-3">
			<%= @business.business_subtypes.map{|v| v.name }.join(", ") %>
		</div>
	</div>

	<div class="form-group row">
		<label for="service_type" class="col-2">Service Options:</label>
		<div class="col-3">
			<% @business.service_types.each do |service_type| %>
				<%= service_type.name %><br/>
			<% end %>
		</div>
	</div>

	<div class="form-group row">
		<label for="hours" class="col-2">Business Hours:</label>
		<div class="col-6">
			<%= @business.hours %>
		</div>
	</div>
	<div class="form-group row">
		<label for="hours" class="col-2">Happy Hour?</label>
		<div class="col-6">
			<% if @business.happy_hour %>
				<i class="fa fa-check"></i>
			<% end %>
		</div>
	</div>
	<div class="form-group row">
		<label for="hours" class="col-2">Business Listing Zone:</label>
		<div class="col-6">
			<%= @business.business_listing_zone %>
		</div>
	</div>
	<hr/>

	<div class="form-group row">
		<label for="address" class="col-2">Address:</label>
		<div class="col-8">
				<%= @business.address1 %><br/>
				<% if !@business.address2.nil? %>
					<%= @business.address2 %><br/>
				<% end %>
				<%= @business.city %>, <%= @business.state %>	<%= @business.zipcode %>
		</div>
	</div>

	<div class="form-group row">
		<label for="website" class="col-2	">Website:</label>
		<div class="col-8">
			<%= @business.website %>
		</div>
	</div>

	<div class="form-group row">
		<label for="phonenum" class="col-2">Phone Number:</label>
		<div class="col-8">
			<%= number_to_phone(@business.phonenum) %>
		</div>
	</div>

	<div class="form-group row">
		<label for="email" class="col-2">Email:</label>
		<div class="col-8">
			<%= @business.email %>
		</div>
	</div>
	<hr/>

	<div class="form-group row">
		<label for="notes" class="col-2">Yelp URL:</label>
		<div class="col-8">
			<%= @business.yelp_url %>
		</div>
	</div>
	<div class="form-group row">
		<label for="notes" class="col-2">Awards:</label>
		<div class="col-8">
			<%= @business.award_id %>
		</div>
	</div>
	<hr/>

	<div class="form-group row">
		<label for="notes" class="col-2">Notes:</label>
		<div class="col-8">
			<%= @business.notes %>
		</div>
	</div>
	<hr/>

	<h5>Business Awards: <small><em>(<%= link_to 'add new award', new_award_path(:current_business=>@business) %>)</em></small></h5>
	<div class="offset-1 mw-100">
		<table class="table table-hover table-sm w-auto">
			<tbody>
				<% @business.awards.each do |award| %>
					<tr>
						<td><%= award.year %></td>
						<td><%= award.place %></td>
						<td><%= award.name %></td>
						<td><%= award.description %></td>
						<td class="text-center">
							<%= link_to icon('edit fa-lg'),
								edit_award_path(award,:current_business=>@business),
								title: 'Edit', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
						</td>
						<td class="text-center">
							<%= link_to icon('remove fa-lg'), 
								award_path(award), :class => "",
								:method=> :delete, :action => 'destroy',
								data: {confirm:'Remove award?'},
								title: 'Delete', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<hr/>
	
	<h5>Business Contacts: <small><em>(<%= link_to 'add new contact', new_contact_path(:current_business=>@business) %>)</em></small></h5>
	<div class="offset-1 mw-100">
		<table class="table table-hover table-sm w-auto">
			<tbody>
				<% @business.contacts.each do |contact| %>
					<tr>
						<td><%= contact.name %></td>
						<td><%= number_to_phone(contact.phonenum) %></td>
						<td><%= contact.email %></td>
						<td class="text-center">
							<%= link_to icon('edit fa-lg'),
								edit_contact_path(contact,:current_business=>@business),
								title: 'Edit', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
						</td>
						<td class="text-center">
							<%= link_to icon('remove fa-lg'), 
								contact_path(contact), :class => "",
								:method=> :delete, :action => 'destroy',
								data: {confirm:'Remove contact?'},
								title: 'Delete', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
