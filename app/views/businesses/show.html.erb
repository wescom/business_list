<div class="business_heading">
	<h1>
		<%= image_tag @business.logo.url(:medium) %>
		<%= @business.name %>
		<div class="float-right"><%= link_to "Edit", edit_business_path(@business), :class => 'btn btn-primary' %></div>
	</h1>
</div>

<div class="business_block" >
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="business_type" class="col-form-label">Business Type:</label>
			<div class="col-12">
				<%= @business.business_type.name %>
			</div>
		</div>
		<div class="form-group col-md-6">
			<label for="service_type" class="col-form-label">Service Options:</label>
			<div class="col-12">
				<%= @business.service_type.name %>
			</div>
		</div>
	</div>
	<hr/>

	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="address1" class="col-form-label">Address1:</label>
			<div class="col-12">
				<%= @business.address1 %>
			</div>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="address2" class="col-form-label">Address2:</label>
			<div class="col-12">
				<%= @business.address2 %>
			</div>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-4">
			<label for="city" class="col-form-label">City:</label>
			<div class="col-12">
				<%= @business.city %>
			</div>
		</div>
		<div class="form-group col-md-2">
			<label for="state" class="col-form-label">State:</label>
			<div class="col-12">
				<%= @business.state %>
			</div>
		</div>
		<div class="form-group col-md-2">
			<label for="zipcode" class="col-form-label">Zipcode:</label>
			<div class="col-12">
				<%= @business.zipcode %>
			</div>
		</div>
	</div>
	<hr/>

	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="hours" class="col-form-label">Business Hours:</label>
			<div class="col-6">
				<%= @business.hours %>
			</div>
		</div>
		<div class="form-group col-md-6">
			<label for="website" class="col-form-label">Website:</label>
			<div class="col-12">
				<%= @business.website %>
			</div>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="phonenum" class="col-form-label">Phone Number:</label>
			<div class="col-6">
				<%= @business.phonenum %>
			</div>
		</div>
		<div class="form-group col-md-6">
			<label for="email" class="col-form-label">Email:</label>
			<div class="col-12">
				<%= @business.email %>
			</div>
		</div>
	</div>
	<hr/>
	<div class="form-group row">
		<label for="notes" class="col-form-label">Notes:</label>
		<div class="col-12">
			<%= @business.notes %>
		</div>
	</div>
</div>