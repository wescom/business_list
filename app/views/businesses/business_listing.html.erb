<% if @businesses %>
	<% unless @businesses.nil? %>
		<table id="businesss_listing" class="table table-condensed table-striped table-sm ">
			<thead class="">
				<tr class="d-flex">
					<th class="col-1 text-center d-none d-sm-table-cell">Logo</th>
					<th class="col-2"><%= sortable "name" %></th>
					<th class="col-1 text-center d-none d-lg-table-cell">
						<%= sortable "business_types.name", @businesses.first.business_type.title_for_subtypes unless @businesses.first.nil? %>
					</th>
					<th class="col-1 text-center d-none d-lg-table-cell">Hours</th>
					<th class="col-2 d-none d-lg-table-cell">Location</th>
					<th class="col-2 text-center d-none d-sm-table-cell">Phone</th>
					<th class="col-2 text-center d-none d-sm-table-cell">Website</th>
					<th class="col-1 text-center d-none d-lg-table-cell"><%= sortable "service_types.name", "Service" %></th>
				</tr>
			</thead>
			<tbody>
				<% @businesses.each do |business| %>
					<tr class="d-flex">
						<td class="col-1 text-center d-none d-sm-table-cell">
							<%= image_tag business.logo.url(:thumb), :class => "max_100" unless business.logo_file_name.nil? %>
						</td>	
						<td class="col-2"><%= business.name %></td>	
						<td class="col-1 text-center d-none d-lg-table-cell"><%= business.business_subtypes.map{|v| v.name }.join(", ") unless business.business_subtypes.nil? %></td>
						<td class="col-1 text-center d-none d-lg-table-cell"><%= business.hours %></td>
						<td class="col-2 d-none d-sm-table-cell"><%= business_address_city(business) %></td>
						<td class="col-2 text-center d-none d-sm-table-cell"><%= number_to_phone(business.phonenum) %></td>
						<td class="col-2 d-none d-sm-table-cell">
							<%= link_to shrink_url_field(business.website), business.website, target: :_blank unless business.website.nil? %>
						</td>
						<td class="col-1 text-center d-none d-lg-table-cell"><%= business.service_type.name unless business.service_type.nil? %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
<% end %>
