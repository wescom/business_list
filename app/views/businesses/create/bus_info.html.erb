<div class="business_heading">
	<h1>Steps to submit a Business:</h1>
	<%= render 'shared/create_business_progress' %>
</div>

<div class="business_block" >
	<%= form_for(@business, :url => wizard_path, :method => :put) do |form| %>
	<h3> Tell us about your business </h3>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label for="name" class="col-form-label">Business Name: *</label>
			<div class="col-12">
				<%= form.text_field :name, class: "form-control", :placeholder => "Name", :required => "true" %>
			</div>
		</div>
		<div class="form-group col-md-6">
			<label for="logo" class="col-form-label">Business Logo:</label>
			<div class="col-8">
				<%= image_tag @business.logo.url(:thumb) unless @business.new_record? %>
				<br/><br/><%= form.file_field :logo %>
			</div>
		</div>
	</div>
	<div class="form-group row d-flex justify-content-end">
		<%= form.submit "Next", :class => 'btn btn-primary'%>
		<%= form.submit "Cancel", :name => 'cancel_button', :class => 'btn btn-primary'%>
	</div>

	<% end %>
	
</div>
