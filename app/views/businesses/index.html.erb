<div class="page-content">
	<div class="business_listing_heading">
		<div class="d-flex justify-content-between align-items-center">
			<h2>
				<% if params[:type].nil? %>
					<% if ['admin', 'sales', 'supervisor'].include? get_user_role(current_user) %>
						All
					<% else %>
						My
					<% end %>
				<% else %>
					<%= params[:type].camelize %>
				<% end %>
				Businesses
			</h2>
			<div class="float-right"><%= link_to "New Business", create_business_wizard_path, :class => 'btn btn-primary' %></div>
		</div>
	</div>

	<div class="business_black">
		<div class="">
			<% if @businesses %>
				<% unless @businesses.nil? %>
					<table id="businesss" class="table table-hover table-condensed table-striped table-sm">
						<thead class="sorting">
							<tr>
								<th class="text-center align-middle d-none d-sm-table-cell">Logo</th>
								<th class="align-middle"><%= sortable "name" %></th>
								<th class="text-center align-middle d-none d-sm-table-cell"><%= sortable "business_types.name", "Type" %></th>
								<th class="text-center align-middle d-none d-lg-table-cell">Hours</th>
								<th class="align-middle d-none d-lg-table-cell">Location</th>
								<th class="text-center align-middle d-none d-lg-table-cell">Phone</th>
								<th class="text-center align-middle d-none d-lg-table-cell">Website</th>
								<th class="text-center align-middle d-none d-sm-table-cell"><%= sortable "service_types.name", "Service" %></th>
								<th class="text-center align-middle ">Action</th>
							</tr>
						</thead>
						<tbody>
							<%= render :partial => 'table_row', :collection => @businesses %>
						</tbody>
					</table>
				<% end %>
			<% end %>
		</div>
	</div>
</div>