<div class="zone_heading">
	<h1>Add zone</h1>
</div>

<div class="zone_block" >
	<%= form_for(@zone) do |f| %>
		<div class="form-group row">
			<label for="name" class="offset-1 col-1 col-form-label">Zone:</label>
			<%= render 'shared/field_error_messages', object: @zone, field: :name %>
			<div class="col-3">
				<%= f.text_field :name, class: "form-control" %>
			</div>
		</div>

		<div class="form-group row d-flex justify-content-end">
			<%= f.submit "Add", :class => 'btn btn-primary'%>
			<%= f.submit "Cancel", :name => 'cancel_button', :class => 'btn btn-primary'%>
		</div>
	<% end %>
</div>
