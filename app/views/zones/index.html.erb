<div class="page-content">
	<div class="business_type_heading">
		<div class="d-flex justify-content-between align-items-center">
			<h2>Business Listing Zones</h2>
			<div class="float-right"><%= link_to "New Zone", new_zone_path %></div>
		</div>
			<div>
				<small>These are the zones that business would be listed within. The places they do business (ie. Bend, Redmond,...)</small>
			</div>
	</div>

	<div class="zone_block">
		<div class="">
			<% if @zones %>
				<% unless @zones.nil? %>
					<table id="services_types" class="table table-hover table-condensed table-striped table-sm">
						<thead class="">
							<tr>
								<th class="">Name</th>
								<th class="text-center">Action</th>
							</tr>
						</thead>
						<tbody>
							<%= render :partial => 'table_row', :collection => @zones %>
						</tbody>
					</table>
				<% end %>
			<% end %>
		</div>
	</div>
</div>