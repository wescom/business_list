<div class="user_heading">
	<h1>
		Edit User:
		<div class="float-right"><%= link_to "All Users", users_path, :class => 'btn btn-primary btn-sm' %></div>
	</h1>
</div>

<div class="user_block" >
	<div class="form-group row">
		<label for="name" class="col-2">Email:</label>
		<div class="col-6">
			<%= @user.email %>
		</div>
	</div>

	<div class="form-group row">
		<label for="name" class="col-2">Role:</label>
		<div class="col-6">
			<%= form_tag user_set_role_path(@user.id), :method => :put do %>
				<%= select_tag "role", options_for_select(User::ROLES, :selected=>get_user_role(@user)) %>
				<%= submit_tag "Save", :class => 'submit btn btn-sm btn-success'%>
			<% end %>
		</div>
	</div>

<hr/>
	<div class="form-group row">
		<label for="name" class="col-2">Created At:</label>
		<div class="col-4">
			<%= @user.created_at.strftime('%m/%d/%y %I:%M%p') unless @user.created_at.nil?  %>
		</div>
		<label for="name" class="col-2">Last Login:</label>
		<div class="col-4">
			<%= @user.last_sign_in_at.strftime('%m/%d/%y %I:%M%p') unless @user.last_sign_in_at.nil? %>
		</div>
	</div>

	<div class="form-group row">
		<label for="name" class="col-2">Last Updated:</label>
		<div class="col-4">
			<%= @user.updated_at.strftime('%m/%d/%y %I:%M%p') unless @user.updated_at.nil?  %>
		</div>
		<label for="name" class="col-2"># Logins:</label>
		<div class="col-4">
			<%= @user.sign_in_count %>
		</div>
	</div>

	<hr/>
	<div class="form-group row">
		<label for="name" class="col-2">Reset Password?</label>
		<%= link_to "Reset Password", user_password_reset_instructions_path(@user.id), :method=> :put, :class => 'btn btn-info btn-sm' %>
	</div>

</div>