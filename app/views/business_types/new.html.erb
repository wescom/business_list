<div class="business_type_heading">
	<h1><%= @business_type.name %></h1>
</div>

<div class="business_type_block" >
	<%= form_for(@business_type) do |f| %>
		<div class="form-group row">
			<label for="name" class="offset-1 col-3 col-form-label">Business Type:</label>
			<div class="col-3">
				<%= f.text_field :name, class: "form-control", :required => "true", :placeholder => 'Retail, Restaurants,...' %>
			</div>
		</div>
		<div class="form-group row">
			<label for="name" class="offset-1 col-3 col-form-label">Title for SubTypes:</label>
			<div class="col-3">
				<%= f.text_field :title_for_subtypes, class: "form-control", :required => "true", :placeholder => 'Cuisine, Business Types,...' %>
			</div>
		</div>

		<div class="form-group row d-flex justify-content-end">
			<%= f.submit "Update", :class => 'btn btn-primary'%>
			<%= f.submit "Cancel", :name => 'cancel_button', :class => 'btn btn-primary'%>
		</div>
	<% end %>
</div>
