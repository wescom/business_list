<div class="form-group row">
	<div class="form-group col-md-6">
		<label for="name" class="col-form-label">Name:</label>
		<div class="col-6">
			<%= form.text_field :name, class: "form-control", maxlength: 30, :required => "true", :placeholder => "Award name" %>
		</div>
	</div>
</div>
<div class="form-group row">
	<div class="form-group col-md-12">
		<label for="description" class="col-form-label">Description:</label>
		<div class="col-12">
			<%= form.text_field :description, class: "form-control", maxlength: 100, :placeholder => "Longer description if needed" %>
		</div>
	</div>
</div>
<div class="form-group row">
	<div class="form-group col-md-12">
		<label for="year" class="col-form-label">Year:</label>
		<div class="col-2">
			<%= form.select :year, Date.today.year.downto(2000), 
				{:prompt => "- Select year -", :required => true},
				{:class => "form-control"} %>
		</div>
	</div>
</div>
<div class="form-group row">
	<div class="form-group col-md-12">
		<label for="place" class="col-form-label">Place:</label>
		<div class="col-4">
			<%= form.text_field :place, class: "form-control", maxlength: 20, :placeholder => "1st, 2nd, Runner Up,..." %>
		</div>
	</div>
</div>
